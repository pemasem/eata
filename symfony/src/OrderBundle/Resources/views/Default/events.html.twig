<div id="client_info" style="display:none;text-align:left" >
<button onclick="$('#order_show').parent().animate({width: '200px'}, 500);$('#order_show').parent().animate({height: '100px'}, 500);$('#order_show').show();$('#client_info').hide();return false;">HIDE</button>
<hr>
<div class="form-group  clearfix col-sm-6"   >
 <div class='row'>
       <div class='col-sm-4'>
           <div class='form-group'>
               <label>Email</label>

           </div>
       </div>
       <div class='col-sm-4'>
           <div class='form-group'>
               <small class="form-text">Your contact email</small>

           </div>
       </div>
       <div class='col-sm-4'>
           <div class='form-group'>
           <input class="form-control" name="email"    >
           </div>
       </div>
   </div>
   </div>
    <div class="form-group  clearfix col-sm-6"   >
     <div class='row'>
           <div class='col-sm-4'>
               <div class='form-group'>
                   <label>Name</label>

               </div>
           </div>
           <div class='col-sm-4'>
               <div class='form-group'>
                   <small class="form-text">Your Name</small>

               </div>
           </div>
           <div class='col-sm-4'>
               <div class='form-group'>
               <input class="form-control" name="name"    >
               </div>
           </div>
       </div>
       </div>
       <div class="form-group  clearfix clearfix col-sm-6"  >
       <div class='row '>
             <div class='col-sm-4'>
                 <div class='form-group'>
                     <label>Lastname</label>

                 </div>
             </div>
             <div class='col-sm-4'>
                 <div class='form-group'>
                     <small class="form-text">Your Lastname</small>

                 </div>
             </div>
             <div class='col-sm-4'>
                 <div class='form-group'>
                 <input class="form-control" name="lastname"    >
                 </div>
             </div>
         </div>
         </div>
         <div class="form-group  clearfix clearfix col-sm-6"  >
         <div class='row '>
               <div class='col-sm-4'>
                   <div class='form-group'>
                       <label>Document Id</label>

                   </div>
               </div>
               <div class='col-sm-4'>
                   <div class='form-group'>
                       <small class="form-text">Mandatory</small>

                   </div>
               </div>
               <div class='col-sm-4'>
                   <div class='form-group'>
                   <input class="form-control" name="documentId"    >
                   </div>
               </div>
           </div>
           </div>
           <div class="form-group  clearfix clearfix col-sm-6"  >
           <div class='row'>
                 <div class='col-sm-4'>
                     <div class='form-group'>
                         <label>Zipcode</label>

                     </div>
                 </div>
                 <div class='col-sm-4'>
                     <div class='form-group'>
                         <small class="form-text">From your city</small>

                     </div>
                 </div>
                 <div class='col-sm-4'>
                     <div class='form-group'>
                     <input class="form-control" name="zipcode"    >
                     </div>
                 </div>
             </div>
             </div>
             <hr>
             <div class="form-group  clearfix clearfix col-sm-6"  >
             <div class='row '>
                   <div >
                       <div class='form-group'>

<input type="submit" name="s" value="CONFIRM" class="btn">
                       </div>
                   </div>

               </div>
               </div>
  </div>
</div>

<div class="container">

   <div class="row">
     <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">

       <ul class="event-list">
       {% for event in events %}
         <li>
           <time datetime="{{ event.date|date("Y-m-d") }}">
             <span class="day">{{ event.date|date("d") }}</span>
             <span class="month">{{ event.date|date("F") }}</span>
             <span class="year">{{ event.date|date("Y") }}</span>
             <span class="time">ALL DAY</span>
           </time>
           <img  src="{{asset('bundles/order/img/fire.jpg')}}" />
           <div class="info">
             <h2 class="title">{{ event.name|e }}</h2>
            <button class="ajax" data-event_id="{{ event.id }}">Show Tickets</button>
            <button  class="toggle" id="toggle_{{ event.id }}" data-event_id="{{ event.id }}" style="display:none">Tickets</button>
            <p class="desc" id="total_event_{{ event.id }}" data-amount="0" data-total="0"></p>
           </div>
           <div class="social">
             <ul>
               <li class="facebook" style="width:33%;"><a href="#facebook"><span class="fa fa-facebook"></span></a></li>
               <li class="twitter" style="width:34%;"><a href="#twitter"><span class="fa fa-twitter"></span></a></li>
               <li class="google-plus" style="width:33%;"><a href="#google-plus"><span class="fa fa-google-plus"></span></a></li>
             </ul>
           </div>
           <li id="ajax-results{{ event.id }}" class="tickets" style="display:none"><div class="loader"></div></li>
         </li>
       {% endfor %}
       </ul>


     </div>
   </div>
 </div>
   </form>
{% endblock %}
